// Модальное окно поиска

.search-modal(data-type="js-modal", data-modal="js-search")
  .search-modal__body
    .search-modal__content
      .search-modal__content-search
        +search("Поиск по сайту", "")
      .search-modal__content-history.serch-history
        p.serch-history__title История запросов
        .serch-history__items
      +more-btn-arrow("Расширенный поиск", "/search", "search-modal__content-more")
    button.search-modal__close(data-type="js-close-btn")
      span.search-modal__close-img