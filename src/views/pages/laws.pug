block content
  main.laws
    // Блок с заголовком
    .laws__title.title-block
      ul.laws__title-breadcrumbs.breadcrumbs
        li.breadcrumbs__item.breadcrumbs__item-prev
          a.breadcrumbs__item-text(href="/") Главная
          img.breadcrumbs__item-arrow.svg(src="@img/svg/arrow-right-thin.svg", alt="")
        li.breadcrumbs__item.breadcrumbs__item-current
          span.breadcrumbs__item-text Законы
      +marquee("Актуальные законы ОАЭ", "laws__title-marquee")
      .laws__title-masonry.masonry
        .masonry-bloks

    // Тело страницы
    .laws__body
      .laws-content
        +nav-bar(laws_nav_list, "laws-content__navigation")
        .laws-content__block.laws-block
          .laws-filters
            form.laws-filters__form(role="search")
              .search.transparent
                input.search-input(type="search", name="search" placeholder="Поиск по законам", minlength="4")
                button.search-btn
                  img.search-btn__img.svg(src="@img/svg/search.svg", alt="Поиск")
              .laws-filters__filter
                +drop-down("Отрасль", "filter", laws_nav_list)
              .laws-filters__filter
                +drop-down("Год", "filter", laws_filter_years)
              button.laws-filters__submit(type="submit") Поиск
          p.laws-result_count Найдено записей: #[span 3]
          +result(laws_result, "laws-result")
          .laws-pagination.pages-pagination
            button.pages-pagination__button.pages-pagination__button-prev
              img.pages-pagination__button-img.svg(src="@img/svg/pagination-arrow.svg", alt="Prev")
            .pages-pagination__items
              .pages-pagination__items-bg
              button.pages-pagination__item.pages-pagination__item-current 1
              button.pages-pagination__item 2
              button.pages-pagination__item 3
              button.pages-pagination__item 4
              button.pages-pagination__item 5
              span.pages-pagination__dots ...
              button.pages-pagination__item.pages-pagination__item-all 8
            button.pages-pagination__button.pages-pagination__button-next
              img.pages-pagination__button-img.svg(src="@img/svg/pagination-arrow.svg", alt="Next")

