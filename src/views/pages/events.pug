block content
  main.events
    // Блок с заголовком
    .events__title.title-block
      ul.events__title-breadcrumbs.breadcrumbs
        li.breadcrumbs__item.breadcrumbs__item-prev
          a.breadcrumbs__item-text(href="/") Главная
          img.breadcrumbs__item-arrow.svg(src="@img/svg/arrow-right-thin.svg", alt="")
        li.breadcrumbs__item.breadcrumbs__item-current
          span.breadcrumbs__item-text События
      h1.title-block__title Последние события ОАЭ
    .events__body
      .events__wrapper
        .events__content
          .events__items(data-pagination-content="events-pagination", data-page-size="9")

            // Карточка с поиском и фильтром
            .events__content-filters.events-filters
              form.events-filters__search-form(role="search")
                .events-filters__search.search.transparent
                  input.search-input(type="search", name="search" placeholder="Поиск по событиям", minlength="4")
                  button.search-btn
                    img.search-btn__img.svg(src="@img/svg/search.svg", alt="Поиск")
                .events-filters__buttons
                  +datepicker("Дата", "events-filters__buttons-filters-date", "events-filters-datepicker", "all", "dd.MM.yy")
                  button.events-filters__submit(type="submit") Поиск
              p.events-filters__count Найдено записей: #[span 3]

            // Карточка с заголовком
            .events__content-title
              h2.events-item__title Последние новости и события ОАЭ

            // Карточки с новостями
            each event in events_list
              a.events-item(href= event.url, data-type="pagination-item")
                .events-item__image
                  img.events-item__image-img(src= event.img, alt="")
                .events-item__content
                  h3.events-item__title= event.title
                  span.events-item__date= event.date
                  p.events-item__description= event.description
                  .events-item__more.more-btn-arrow
                    p.more-btn-arrow__text Читать далее
                    img.more-btn-arrow__img.svg(src="@img/svg/arrow-right-thin.svg", alt="")
          .pages-pagination.events-pagination(
            data-type="js-pagination", data-pagination-target="events-pagination")
            .pages-pagination__bg

