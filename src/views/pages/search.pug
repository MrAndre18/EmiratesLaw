extends ../layouts/master.pug

block header
  include ../partials/_header.pug

block content
  main.search-page
    // Блок с заголовком
    .search-page__title.title-block
      ul.search-page__title-breadcrumbs.breadcrumbs
        li.breadcrumbs__item.breadcrumbs__item-prev
          a.breadcrumbs__item-text(href="/") Главная
          img.breadcrumbs__item-arrow.svg(src="@img/svg/arrow-right-thin.svg", alt="")
        li.breadcrumbs__item.breadcrumbs__item-current
          span.breadcrumbs__item-text Поиск по сайту
      +marquee("Поиск по сайту", "search-page__title-marquee")
      .search-page__title-masonry.masonry
        .masonry-bloks
    .search-page__body
      .search-page__settings
        .search-page__search
        .search-page__filters

block footer
  include ../partials/_footer.pug