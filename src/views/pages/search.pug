block content
  main.search-page
    // Блок с заголовком
    .search-page__title.title-block
      ul.search-page__title-breadcrumbs.breadcrumbs
        li.breadcrumbs__item.breadcrumbs__item-prev
          a.breadcrumbs__item-text(href="/") Главная
          img.breadcrumbs__item-arrow.svg(src="@img/svg/arrow-right-thin.svg", alt="")
        li.breadcrumbs__item.breadcrumbs__item-current
          span.breadcrumbs__item-text Поиск по сайту
      h1.title-block__title Поиск по сайту
    .search-page__body
      .search-page__body-wrapper
        .search-page__settings
          .search-page__search-block
            +search("Поиск по сайту", "search-page__search")
            .search-page__search-history.serch-history.swiper
              .serch-history__items.swiper-wrapper
            p.search-page__search-count Найдено записей: #[span 10]
          .search-page__filters
            +datepicker("Дата", "search-page__filters-date", "search-page-datepicker", "all", "dd.MM.yy")
            .search-page__filters-items
              label.search-page__filters-item Законы
                input(type="checkbox", name="laws")
              label.search-page__filters-item Справка
                input(type="checkbox", name="info")
        .search-page__content
          +result(search_page_result, "search-page__content-result", "")
          +pagination("search-page__content-pagination")

